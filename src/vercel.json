{
  "cleanUrls": true,
  "redirects": [
    {
      "source": "/(.*)",
      "has": [
        {
          "type": "host",
          "value": "www.muffinpanrecipes.com"
        }
      ],
      "destination": "https://muffinpanrecipes.com/$1",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/recipes/:slug",
      "destination": "/recipes/:slug/index.html"
    },
    {
      "source": "/((?!assets/).*)",
      "destination": "/"
    }
  ]
}
